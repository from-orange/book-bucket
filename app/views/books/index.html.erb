<p id="notice"><%= notice %></p>

<div class='center hero-unit'>
  <h1>Welcome to Book Bucket!</h1>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>

<%= search_form_for @q do |f| %>
  <%= f.label :title_cont, 'タイトル' %>
  <%= f.text_field :title_cont %>

  <%= f.label :auther_cont, '著者' %>
  <%= f.text_field :auther_cont %>
<br>
  <%= f.label :publisher_cont, '出版社' %>
  <%= f.text_field :publisher_cont %>

  <%= f.label :version_eq , '版' %>
  <%= f.text_field :version_eq %>


  <div>
    <%= f.submit '検索する' %>
  </div>
<% end %>
<%=will_paginate%>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :title,"タイトル", default_order: :desc) %></th>
      <th>著者</th>
      <th>出版社</th>
      <th><%= sort_link(@q, :version,"版", default_order: :desc) %></th>
      <th>出品者</th>
       <th colspan="3"></th>

    </tr>
  </thead>

  <!-- <%=will_paginate%> -->

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.auther %></td>
        <td><%= book.publisher %></td>
        <td><%= book.version %></td>
        <td><%= book.bucketter.name %></td>
        <td><%= link_to '詳細', book %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<%=will_paginate%>

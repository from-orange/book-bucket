<h1>Editing Offer</h1>
<% @main = @offer %>
<%= form_for(@offer) do |f| %>
  <%= render 'shared/error_messages' %>
<table class ="table table-striped">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th>出版社</th>
      <th>版</th>
      <th>出品者</th>
      <th>登録日</th>
       <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @book.title %></td>
        <td><%= @book.auther %></td>
        <td><%= @book.publisher %></td>
        <td><%= @book.version %></td>
        <td><%= @book.bucketter.name %></td>
        <td><%= needed_time(@book.created_at) %> </td>
        <td><%= link_to '詳細', @book %></td>

      </tr>
  </tbody>
</table>

<div class="hidden_field">
  <%= f.hidden_field :deal_end,  :value => true %>
</div>
<div class="actions">
  <%= f.submit "受取", class:"btn btn-default"%>
</div>
<% end %>

<%= link_to 'Show', @offer %> |
<%= link_to 'Back', offers_path %>
